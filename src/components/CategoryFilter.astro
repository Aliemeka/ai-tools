---
export interface Props {
  categories: Array<{
    name: string;
    count: number;
    slug: string;
  }>;
  activeCategory?: string;
}

const { categories, activeCategory } = Astro.props;
---

<div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
  <h3 class="text-lg font-semibold text-gray-900 mb-4">Categories</h3>
  <div class="space-y-2">
    <a
      href="/tools"
      class={`block px-3 py-2 rounded-md text-sm font-medium transition-colors ${
        !activeCategory
          ? 'bg-blue-100 text-blue-700'
          : 'text-gray-700 hover:bg-gray-100'
      }`}
    >
      All Tools
    </a>
    {categories.map(category => (
      <a
        href={`/category/${category.slug}`}
        class={`block px-3 py-2 rounded-md text-sm font-medium transition-colors ${
          activeCategory === category.slug
            ? 'bg-blue-100 text-blue-700'
            : 'text-gray-700 hover:bg-gray-100'
        }`}
      >
        <div class="flex justify-between items-center">
          <span>{category.name}</span>
          <span class="text-xs text-gray-500">{category.count}</span>
        </div>
      </a>
    ))}
  </div>
</div>

<div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6 mt-6">
  <h3 class="text-lg font-semibold text-gray-900 mb-4">Pricing</h3>
  <div class="space-y-2">
    <label class="flex items-center">
      <input type="checkbox" class="rounded border-gray-300 text-blue-600 focus:ring-blue-500" name="pricing" value="free">
      <span class="ml-2 text-sm text-gray-700">Free</span>
    </label>
    <label class="flex items-center">
      <input type="checkbox" class="rounded border-gray-300 text-blue-600 focus:ring-blue-500" name="pricing" value="freemium">
      <span class="ml-2 text-sm text-gray-700">Freemium</span>
    </label>
    <label class="flex items-center">
      <input type="checkbox" class="rounded border-gray-300 text-blue-600 focus:ring-blue-500" name="pricing" value="paid">
      <span class="ml-2 text-sm text-gray-700">Paid</span>
    </label>
  </div>
</div>

<div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6 mt-6">
  <h3 class="text-lg font-semibold text-gray-900 mb-4">Source</h3>
  <div class="space-y-2">
    <label class="flex items-center">
      <input type="checkbox" class="rounded border-gray-300 text-blue-600 focus:ring-blue-500" name="source" value="open-source">
      <span class="ml-2 text-sm text-gray-700">Open Source</span>
    </label>
    <label class="flex items-center">
      <input type="checkbox" class="rounded border-gray-300 text-blue-600 focus:ring-blue-500" name="source" value="closed-source">
      <span class="ml-2 text-sm text-gray-700">Closed Source</span>
    </label>
  </div>
</div>